@model LoginViewModel

@{
    ViewData["Title"] = "Login";
@if (!string.IsNullOrEmpty(TempData["Error"] as string))
{
    <div class="alert alert-error">
        @TempData["Error"]
    </div>
}
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<body class=login-background>
    <section class="login-background h-100 gradient-form">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                <div class="row g-0">
                    <div class="col-lg-6">
                    <div class="card-body p-md-5 mx-md-4">

                        <div class="text-center">
                        <img src="~/images/UkeaLogoLogin.png" alt="UkeaLogoLogin" asp-append-version="true">
                        <h4 class="mt-1 mb-5 pb-1">Admin Login Page</h4>
                        </div>

                        <form asp-action="Login" method="post">
                            @Html.AntiForgeryToken()
                            <p>Please login to your account</p>

                            <div class="form-outline mb-4">
                                <input asp-for="Username" class="form-control" placeholder="Username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="text-center pt-1 mb-5 pb-1">
                                <button class="btn" id="loginBtn" type="submit">Log in</button>
                            </div>
                        </form>

                        @if (ViewData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
                        }
                    </div>
                    </div>
                    <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                    <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                        <h4 class="mb-4">Where Style Meets Comfort, Every Piece Counts.</h4>
                        <p class="small mb-0">Furnishing Your World, One Room at a Time.</p>
                    </div>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
    </section>
</body>