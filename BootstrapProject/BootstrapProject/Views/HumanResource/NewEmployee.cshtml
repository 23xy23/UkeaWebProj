@{
    Layout = "~/Views/Shared/_NavBarLayout.cshtml";
    ViewData["Title"] = "New Employee Page";
}

<link rel="stylesheet" href="~/css/HR.css" asp-append-version="true" />

<div class="page-container">
    <div class="header-div">
        <div class="module-header">New Employee</div>
    </div>

    <div class="form-container">
        <form asp-controller="HumanResource" asp-action="Index" method="post">
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="fname" class="form-control" id="InputfName" placeholder="Enter First Name" style="width:45%" />
            </div>

            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input type="lname" class="form-control" id="InputlName" placeholder="Enter Last Name" style="width:45%" />
            </div>
           
            <!-- there will be more fills to add -->

            <div class="header-div">
                <button onclick="window.location.href='@Url.Action("Index","HumanResource")'" class="submit-product-btn"><p>Submit</p></button>
            </div>
        </form>
    </div>
</div>