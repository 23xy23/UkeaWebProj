@model BootstrapProject.Models.Product

@{
    Layout = "~/Views/Shared/_NavBarLayout.cshtml";
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<h4>Product</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" method="post" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <!-- Hidden input for ProductID -->
                <input type="hidden" asp-for="ProductID" />
                
                <div class="form-group row">
                    <label asp-for="ProductName" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="SKU" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="SKU" class="form-control" />
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="imageUrl" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="imageUrl" class="form-control" />
                        <span asp-validation-for="imageUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Quantity" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="UnitPrice" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="UnitPrice" class="form-control" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CostPrice" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="CostPrice" class="form-control" />
                        <span asp-validation-for="CostPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DateReceived" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="DateReceived" class="form-control" type="datetime-local" />
                        <span asp-validation-for="DateReceived" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DateSold" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="DateSold" class="form-control" type="datetime-local" />
                        <span asp-validation-for="DateSold" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Condition" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Condition" class="form-control" />
                        <span asp-validation-for="Condition" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="MinStockLevel" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="MinStockLevel" class="form-control" />
                        <span asp-validation-for="MinStockLevel" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ReorderLevel" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="ReorderLevel" class="form-control" />
                        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="LeadTime" class="col-sm-3 col-form-label"></label>
